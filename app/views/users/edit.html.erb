<div class="form-wrapper">
  <div class="forms">
    <div class="form-title">
      新規登録をしましょう
    </div>
    <%= form_with model: current_user, local: true do |f|%>
      <%= render "devise/shared/error_messages", resource: f.object %>
      <div class="field">
        <div class='label-wrap'>
          <%= f.label :nickname, class: 'label'%>
        </div>
        <div class='form'>
          <%= f.text_field :nickname, autofocus: true, class: 'form-area nickname', placeholder:"10 characters maximum" %>
        </div>
      </div>
      <div class="field">
        <div class='label-wrap'>
          <%= f.label :email, class: 'label' %>
        </div>
        <div class='form'>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-area email'  %>
        </div>
      </div>
      <div class="field">
        <div class='label-wrap'>
          <%= f.label :password, class: 'label' %>
        </div>
        <div class='form'>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-area password', placeholder:"6 characters minimum" %>
        </div>
      </div>
      <div class="field">
        <div class='label-wrap'>
          <%= f.label :password_confirmation, class: 'label' %>
        </div>
        <div class='form'>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-area password'  %>
        </div>
      </div>
      <div class="btn-content">
        <div class="form-btn">
          <%= f.submit "Update", class: 'send-btn'  %>
        </div>
      </div>
    <% end %>
  </div>
</div>
